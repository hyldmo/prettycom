{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "type": "npm",
            "script": "electron:build",
            "problemMatcher": [
                "$tsc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "type": "npm",
            "script": "webpack:dev",
            "group": "build",
            "isBackground": true,
            "problemMatcher": {
                "background": {
                    "activeOnStart": true,
                    "beginsPattern": "^.*｢wd[ms]｣: ((Compiling\\.\\.\\.)|(Project is running at))",
                    "endsPattern": "^.*｢wdm｣: Compiled successfully\\."
                }
            },
            "dependsOn": [
                "npm: electron:build"
            ]
        }
    ]
}
