{
    "name": "prettycom",
    "repository": "https://github.com/hyldmo/prettycom",
    "version": "1.8.0",
    "description": "A serial monitor written in electron.",
    "license": "MIT",
    "author": {
        "name": "Eivind Hyldmo",
        "email": "eivind.hyldmo@gmail.com",
        "url": "https://github.com/hyldmo"
    },
    "keywords": [
        "Electron",
        "Typescript",
        "React",
        "Redux",
        "CSSNext"
    ],
    "main": "./dist/main.js",
    "scripts": {
        "dev": "npm-run-all --parallel electron:build webpack:dev webpack:wait",
        "build": "npm-run-all --parallel lint:* *:build",
        "package": "env-cmd ./.env electron-builder",
        "release": "npm-run-all clean build package",
        "clean": "rimraf app/**/*.js app/**/*.map app/*/**.css dist **/*.tsbuildinfo",
        "webpack:dev": "env-cmd ./.env webpack serve --config webpack/webpack.development.config.ts --progress --hot",
        "webpack:wait": "wait-on http://localhost:1337 && yarn electron:dev",
        "webpack:build": "env-cmd ./.env webpack --config  webpack/webpack.production.config.ts",
        "electron:dev": "env-cmd ./.env electron .",
        "electron:build": "tsc --project tsconfig.electron.json",
        "lint:ts": "eslint app webpack --ext .ts,.tsx",
        "lint:css": "stylelint app/**/*.scss --syntax scss",
        "stats": "env-cmd ./.env webpack --config webpack.production.config.ts --profile --json > compilation-stats.json",
        "postinstall": "electron-builder install-app-deps"
    },
    "build": {
        "appId": "hyldmo.prettycom.app",
        "files": [
            "dist/"
        ],
        "directories": {
            "buildResources": ".",
            "output": "Release"
        },
        "npmRebuild": false,
        "artifactName": "${productName}-${os}-${arch}.${ext}",
        "linux": {
            "category": "Utility",
            "target": [
                "AppImage",
                "deb",
                "snap"
            ]
        }
    },
    "dependencies": {
        "fs-extra": "^7.0.0",
        "open": "^7.3.0",
        "serialport": "^9.0.2",
        "ws": "^7.4.0"
    },
    "devDependencies": {
        "@fortawesome/fontawesome-free": "^5.8.2",
        "@hot-loader/react-dom": "^16.8.6",
        "@types/classnames": "^2.2.6",
        "@types/fs-extra": "^5.0.4",
        "@types/history": "^4.6.0",
        "@types/node": "^10.1.3",
        "@types/pngjs": "^3.3.2",
        "@types/react": "*",
        "@types/react-dom": "^16.8.2",
        "@types/react-redux": "^7.1.1",
        "@types/react-router": "^4.0.18",
        "@types/react-router-dom": "^4.2.2",
        "@types/react-test-renderer": "^16.8.1",
        "@types/redux-actions": "^2.2.3",
        "@types/redux-logger": "^3.0.7",
        "@types/serialport": "^8.0.1",
        "@types/webpack-env": "^1.15.3",
        "@types/ws": "^6.0.1",
        "@typescript-eslint/eslint-plugin": "^2.8.0",
        "@typescript-eslint/parser": "^2.8.0",
        "bulma": "^0.8.0",
        "classnames": "^2.2.6",
        "connected-react-router": "^6.5.2",
        "css-loader": "^5.0.1",
        "electron": "^10.1.5",
        "electron-builder": "^22.9.1",
        "env-cmd": "^8.0.2",
        "eslint": "^6.7.0",
        "eslint-plugin-react": "^7.16.0",
        "history": "^4.6.3",
        "html-webpack-plugin": "^5.0.0-alpha.4",
        "mini-css-extract-plugin": "^1.3.1",
        "normalize.css": "^8.0.0",
        "npm-run-all": "^4.1.5",
        "postcss": "^7.0.0",
        "postcss-loader": "^3.0.0",
        "react": "~16.8.2",
        "react-dom": "~16.8.2",
        "react-hot-loader": "^4.8.4",
        "react-redux": "^7.1.0",
        "react-router": "^4.2.0",
        "react-router-dom": "^4.2.2",
        "react-test-renderer": "^16.8.2",
        "redbox-react": "^1.5.0",
        "redux": "^4.0.0",
        "redux-logger": "^3.0.6",
        "redux-saga": "^1.0.2",
        "sass": "^1.29.0",
        "sass-loader": "^10.1.0",
        "style-loader": "^2.0.0",
        "stylelint": "^13.7.2",
        "stylelint-config-recommended": "^3.0.0",
        "stylelint-config-recommended-scss": "^4.2.0",
        "stylelint-scss": "^3.6.1",
        "ts-loader": "^8.0.11",
        "ts-node": "^9.0.0",
        "typescript": "^4.0.5",
        "wait-on": "^3.1.0",
        "webpack": "^5.4.0",
        "webpack-cli": "^4.2.0",
        "webpack-dev-server": "^3.11.0"
    },
    "peerDependencies": {
        "windows-build-tools": "4.0.0"
    },
    "resolutions": {
        "@types/node": "^10.1.3",
        "@types/react": "*",
        "@types/webpack": "^4.4.29"
    }
}
