{
    "name": "prettycom",
    "repository": "https://github.com/hyldmo/prettycom",
    "version": "1.3.2",
    "description": "A serial monitor written in electron.",
    "license": "MIT",
    "author": {
        "name": "Eivind Hyldmo",
        "email": "eivind.hyldmo@gmail.com",
        "url": "https://github.com/hyldmo"
    },
    "keywords": [
        "Electron",
        "Typescript",
        "React",
        "Redux",
        "CSSNext"
    ],
    "main": "./app/main.js",
    "scripts": {
        "dev": "npm-run-all --parallel electron:build webpack:dev webpack:wait",
        "build": "npm-run-all --parallel lint:* *:build",
        "package": "env-cmd ./.env electron-builder",
        "dist": "npm-run-all clean build package",
        "clean": "rimraf app/**/*.js app/**/*.map app/*/**.css dist **/*.tsbuildinfo",
        "webpack:dev": "env-cmd ./.env webpack-dev-server --config webpack/webpack.development.config.ts --progress --colors --hot",
        "webpack:wait": "wait-on http://localhost:1337 && yarn electron:dev",
        "webpack:build": "env-cmd ./.env webpack --config  webpack/webpack.production.config.ts --progress --colors",
        "electron:dev": "env-cmd ./.env electron .",
        "electron:build": "tsc --project tsconfig.electron.json",
        "native:build": "electron-rebuild --force",
        "lint:ts": "tslint {__tests__,app}/**/*.{ts,tsx} webpack.*.ts --exclude **/*.d.ts",
        "lint:css": "stylelint app/**/*.scss --syntax scss",
        "stats": "env-cmd ./.env webpack --config webpack.production.config.ts --profile --json > compilation-stats.json",
        "postinstall": "electron-rebuild"
    },
    "build": {
        "appId": "hyldmo.prettycom.app",
        "directories": {
            "buildResources": ".",
            "output": "Release"
        },
        "npmRebuild": false,
        "artifactName": "${productName}-${os}-${arch}.${ext}",
        "linux": {
            "target": [
                "AppImage",
                "deb",
                "snap"
            ]
        }
    },
    "dependencies": {
        "serialport": "^7.1.5",
        "ws": "^7.0.0"
    },
    "devDependencies": {
        "@fortawesome/fontawesome-free": "^5.8.2",
        "@hot-loader/react-dom": "^16.8.6",
        "@types/classnames": "^2.2.6",
        "@types/fs-extra": "^5.0.4",
        "@types/history": "^4.6.0",
        "@types/html-webpack-plugin": "^3.2.0",
        "@types/mini-css-extract-plugin": "0.2.0",
        "@types/node": "*",
        "@types/pixelmatch": "^4.0.0",
        "@types/pngjs": "^3.3.2",
        "@types/react": "*",
        "@types/react-dom": "^16.8.2",
        "@types/react-redux": "^7.0.0",
        "@types/react-router": "^4.0.18",
        "@types/react-router-dom": "^4.2.2",
        "@types/react-router-redux": "^5.0.10",
        "@types/react-test-renderer": "^16.8.1",
        "@types/redux-actions": "^2.2.3",
        "@types/redux-logger": "^3.0.7",
        "@types/serialport": "^7.0.3",
        "@types/webpack": "*",
        "@types/webpack-dev-server": "^3.1.5",
        "@types/webpack-env": "^1.13.9",
        "@types/ws": "^6.0.1",
        "bulma": "^0.7.4",
        "classnames": "^2.2.6",
        "css-loader": "^2.1.0",
        "electron": "^5.0.1",
        "electron-builder": "^20.40.2",
        "electron-rebuild": "^1.8.4",
        "env-cmd": "^8.0.2",
        "fs-extra": "^7.0.0",
        "history": "^4.6.3",
        "html-webpack-plugin": "^3.2.0",
        "mini-css-extract-plugin": "^0.4.0",
        "node-sass": "^4.12.0",
        "normalize.css": "^8.0.0",
        "npm-run-all": "^4.1.5",
        "postcss": "^7.0.0",
        "postcss-loader": "^3.0.0",
        "react": "~16.8.2",
        "react-dom": "~16.8.2",
        "react-hot-loader": "^4.8.4",
        "react-redux": "^5.0.6",
        "react-router": "^4.2.0",
        "react-router-dom": "^4.2.2",
        "react-router-redux": "^5.0.0-alpha.6",
        "react-test-renderer": "^16.8.2",
        "redbox-react": "^1.5.0",
        "redux": "^4.0.0",
        "redux-logger": "^3.0.6",
        "redux-saga": "^1.0.2",
        "sass-loader": "^7.1.0",
        "style-loader": "^0.23.0",
        "stylelint": "^10.0.1",
        "stylelint-config-recommended": "^2.2.0",
        "stylelint-config-recommended-scss": "^3.3.0",
        "stylelint-scss": "^3.6.1",
        "ts-loader": "^5.2.2",
        "ts-node": "^7.0.0",
        "tslint": "^5.6.0",
        "tslint-eslint-rules": "^5.1.0",
        "typescript": "^3.5.1",
        "wait-on": "^3.1.0",
        "webpack": "^4.29.5",
        "webpack-cli": "^3.2.3",
        "webpack-dev-server": "^3.2.0"
    },
    "peerDependencies": {
        "windows-build-tools": "4.0.0"
    },
    "resolutions": {
        "@types/node": "^10.1.3",
        "@types/react": "16.8.4",
        "@types/webpack": "^4.4.29"
    }
}
